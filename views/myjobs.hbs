<section class="login">
    <div class="text-center my-5">
        <h1>Your Jobs</h1>
    </div>
    <div class="jobContainer">
        {{#if err}}
        <div class="alert alert-danger" role="alert">
            {{{err}}}
        </div>
        {{/if}}
        {{#if jobs}}
        {{#each jobs}}
        <div class="job p-3 shadow-sm mb-3">
            <div class="jobTitle">
                <h3>{{title}}</h3>
            </div>
            <div class="jobDescription">
                <p>{{description}}</p>
            </div>
            <div class="jobButtons">
                <a href="/job/update/{{id}}" class="btn btn-warning">Edit</a>
                <a href="/job/delete/{{id}}" class="btn btn-danger">Delete</a>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="alert alert-danger" role="alert">
            You have no jobs!
        </div>
        {{/if}}
    </div>
</section>